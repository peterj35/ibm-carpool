<header class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <nav role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "IBM Carpool Buddy", root_path, id: "logo" %>
      </div>
      <div class="collapse navbar-collapse" id="nav-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Find Carpool", locations_path %></li>
          <% if !logged_in? %>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
          <% end %>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="dropdown-header">Profile</li>
                <li><%= link_to "View", current_user %></li>
                <li><%= link_to "Edit", edit_user_path(current_user) %></li>
                <% if admin_user? %>
                  <li class="divider"></li>
                  <li class="dropdown-header">Administrative</li>
                  <li><%= link_to "Users", users_path %></li>
                  <li><%= link_to "Manage Locations", manage_locations_path %></li>
                <% end %>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
