<% if @offer.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      This offer contains <%= pluralize(@offer.errors.count, "error") %>.
    </div>
    <ul>
    <% @offer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
