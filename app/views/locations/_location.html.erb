<% if current_page?(url_for(:controller => 'static_pages', :action => 'home')) %>
  <div class="col-sm-4">
    <div class="thumbnail">
<!--       <%= link_to image_tag(location.image_name, :alt => location.image_name, :class => "img-responsive"), location %> -->
      <div class="caption">
        <h3><%= link_to location.name, location %></h3>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <li>
      <div class="col-sm-offset-2 col-sm-6 location-name">
        <%= link_to location.name, location %>
        <% if current_user!=nil && current_user.admin? %>
          | <%= link_to "delete", location, method: :delete,
                                        data: { confirm: "Are you sure?" } %>
          | <%= link_to "edit", edit_location_path(location.id) %>
        <% end %>
      </div>
      <div class="col-sm-2">
        <%= link_to image_tag(location.image_name, :alt => location.image_name, :class => "img-responsive"), location %>
      </div>
    </li>
  </div>
<% end %>
