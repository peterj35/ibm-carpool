<div class="row">
	<li>
		<div class="col-sm-offset-2 col-sm-6 location-name">
		  <%= link_to location.name, location %>
		  <% if current_user!=nil && current_user.admin? %>
		    | <%= link_to "delete", location, method: :delete,
		                                  data: { confirm: "Are you sure?" } %>
				| <%= link_to "edit", edit_location_path(location.id) %>
		  <% end %>
		</div>
		<div class="col-sm-2">
			<%= link_to image_tag(location.image_name, :alt => location.image_name, :class => "img-responsive"), location %>
		</div>
	</li>
</div>