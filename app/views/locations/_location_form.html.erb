<%= form_for(@location) do |f| %>
      <%= render 'shared/location_error_messages' %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :image_name %>
      <%= f.text_field :image_name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
      
	<% if !current_page?(url_for(:controller => 'locations', :action => 'new')) %>
        <%= f.submit "Save Changes", class: "btn btn-success" %>
      <% else %>
        <%= f.submit "Add Location", class: "btn btn-primary" %>
     <% end %>
<% end %>