<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
				<br>
				<%= @user.email %>
      </h1>
    </section>
  </aside>
	<div class="col-md-8">
		<% if @user.offer.present? %>
			<h3>Carpool Offer:</h3>
			<ol class="offers">
				<%= render @offer %>
			</ol>
			<% if current_user?(@user) %>
				<%= link_to "Edit Offer", edit_offer_path(@offer.ids), class: "btn btn-lg btn-success btn-block" %>
			<% end %>
		<% end %>
		<% if !@user.offer.present? %>
			<h3>No Offers yet!</h3>
			<% if current_user?(@user) %>
				<%= link_to "Offer a Ride", new_offer_path, class: "btn btn-lg btn-primary btn-block" %>
			<% end %>
		<% end %>
	</div>
</div>
