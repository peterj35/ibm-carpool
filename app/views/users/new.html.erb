<% provide(:title, 'Sign Up') %>
<h1>Sign up</h1>

<p class="text-center">
  Users need to be registered to offer carpools.
  <br>
  You don't need an account to find rides!
</p>

<div class="row top-buffer">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, "IBM Email" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-success" %>
    <% end %>
    <p class="lead top-buffer">
      You will need to verify your account with your email.
    </p>
  </div>
</div>
