<% provide(:title, "Log in") %>
<h1>Login</h1>

<p class="text-center lead">
  Users need to be logged-in to offer carpools.
  <br>
  Log in using your IBM Intranet Credentials
</p>

<div class="row top-buffer">
  <div class="col-md-6 col-md-offset-3" role="form">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "IBM Email" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary top-margin" %>
    <% end %>
    <br>
    <!--<%= link_to "Sign up", signup_path, class: "btn btn-lg btn-success btn-sm btn-block" %>-->
    <!--<p class="top-buffer">Forgot your password? <%= link_to "Reset password", new_password_reset_path %></p>-->
    <p class="top-margin text-center">Contact <a href="mailto:futureblue@ca.ibm.com">futureblue@ca.ibm.com</a> for account-related help.</p>
  </div>
</div>
